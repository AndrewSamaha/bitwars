{
  "$schema": "https://turbo.build/schema.json",
  "tasks": {
    "gen:ts": {
      "outputs": ["packages/shared/src/gen/**"]
    },
    "build": {
      "dependsOn": ["^build", "@bitwars/schemas#gen:ts"],
      "outputs": ["dist/**", ".next/**", "!.next/cache/**", "build/**", "target/**"]
    },
    "dev": {
      "cache": false,
      "persistent": true,
      "dependsOn": ["^dev", "@bitwars/schemas#gen:ts", "@bitwars/shared#build"]
    },
    "test": {
      "cache": false,
      "persistent": true,
      "dependsOn": ["^test", "@bitwars/schemas#gen:ts", "@bitwars/shared#build"]
    }
  }
}
