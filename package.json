{
  "name": "bitwars-monorepo",
  "private": true,
  "packageManager": "pnpm@10.15.1",
  "scripts": {
    "clean": "bash ./scripts/clean.sh",
    "dev": "turbo run dev --parallel",
    "build": "turbo run build",
    "lint": "turbo run lint",
    "test": "turbo run test",
    "test:read-binary": "pnpm --filter bitwars test",
    "test:read-redis": "dotenv -e .env -e .env.local -- pnpm --filter bitwars run test:read-redis",
    "fe:run": "turbo run dev --filter=bitwars",
    "logs": "axiom query 'bitwars | where _time > ago(1d) | sort by _time desc | take 50 | sort by _time asc' || echo 'Warning: Be sure to run gvm use g1.25 before running this command'",
    "engine:run": "cargo run -p rts-engine",
    "engine:build": "cargo build -p rts-engine",
    "engine:read-snapshot": "cargo run --example read_snapshot --manifest-path services/rts-engine/Cargo.toml",
    "engine:read-deltas": "cargo run --example read_deltas --manifest-path services/rts-engine/Cargo.toml",
    "engine:generate-examples": "cargo run --example generate_examples --manifest-path services/rts-engine/Cargo.toml",
    "gen:ts:nocache": "pnpm -w turbo run gen:ts --filter=@bitwars/schemas --no-cache",
    "schema:check": "bash scripts/schema-check.sh",
    "test:replay:two_entities_move": "cargo run -p rts-engine --bin replay_test -- two_entities_move",
    "latency:probe": "cargo run -p rts-engine --bin latency_probe --"
  },
  "devDependencies": {
    "dotenv-cli": "^10.0.0",
    "turbo": "^2.0.0"
  },
  "dependencies": {
    "@bufbuild/protobuf": "^2.7.0"
  },
  "pnpm": {
    "overrides": {
      "@bufbuild/protobuf": "^2.7.0",
      "@axiomhq/logging": "0.1.4",
      "@axiomhq/js": "1.3.1",
      "@axiomhq/nextjs": "0.1.4",
      "@axiomhq/react": "0.1.4"
    }
  }
}
